@model DyersCargoTransit_Interface.Models.ViewModels.TruckVM

@{
    ViewData["Title"] = "Create";
}


<partial name="_DashBoard" />

<div class="container row-cols-md-3  d-flex justify-content-center align-items-center ">


        <form asp-action="Create" class="Razor-Form">

            <center>
                <h3>Create Truck</h3>
            </center>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="LicencePlate" class="control-label"></label>
                <input asp-for="LicencePlate" class="form-control" />
                <span asp-validation-for="LicencePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckCapacity" class="control-label"></label>
                <input asp-for="TruckCapacity" class="form-control" />
                <span asp-validation-for="TruckCapacity" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="TruckStatusId" class="control-label"></label>
                <select asp-for="SelectedTruckStatusId" class="form-control" asp-items="@Model.TruckStatusList">
                    <option disabled selected> -- Select Status -- </option>
                </select>
                <span asp-validation-for="SelectedTruckStatusId" class="text-danger"></span>
            </div>



            <!--Button row-->
            <div class="row mt-2">

                <div class="form-group col-md-6 formBtn">
                    <input type="submit" value="Create Truck" class="btn btn-primary w-100" />
                </div>


                <div class="form-group col-md-6 formBtn">
                    <a asp-action="Index" class="btn btn-dark w-100"> Back To List </a>
                </div>
            </div>

        </form>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
