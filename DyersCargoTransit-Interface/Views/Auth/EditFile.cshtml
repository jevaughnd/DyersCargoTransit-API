@model DyersCargoTransit_Interface.Models.ViewModels.CustomerProfileVM

@{
    ViewData["Title"] = "EditFile";
}

<h1>EditFile</h1>

<h4>Customer Profile VM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="EditFile" class="Razor-Form">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town" class="control-label"></label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="ParishId" class="control-label"></label>
                <input asp-for="ParishId" class="form-control" />
                <span asp-validation-for="ParishId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedParishId" class="control-label"></label>
                <input asp-for="SelectedParishId" class="form-control" />
                <span asp-validation-for="SelectedParishId" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="ParishId" class="control-label"></label>
                <select asp-for="SelectedParishId" class="form-control" asp-items="@Model.ParishList">
                    <option disabled selected> -- Select A Parish -- </option>
                </select>
                <span asp-validation-for="SelectedParishId" class="text-danger"></span>
            </div>


            <!--Images-->
            <div class="form-group">
                <label for="ProfilePictureFile">Profile Picture File:</label>
                <input type="file" name="ProfilePictureFile" id="ProfilePictureFile" class="form-control">
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="VehicleSideImg">
        <a href="@Model.ProfilePictureFile" target="_blank">
            <img src="@Model.ProfilePictureFile" height="200" />
        </a>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
